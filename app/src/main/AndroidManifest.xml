<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hottopic.mit.co.nz.cleaningservice">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.order.MapActivity"/>
        <activity
            android:name=".view.order.HomeActivity"
            android:launchMode="singleTask" />
        <activity android:name=".view.user.LoginActivity" />
        <activity android:name=".view.user.RegisterActivity" />
        <activity
            android:name=".view.user.UserEditActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".view.order.DiscountActivity" />
        <activity android:name=".view.order.OrderBookingActivity" />
        <activity android:name=".view.order.OrderDetailActivity" />
        <activity android:name=".view.order.PaymentActivity" />
        <activity android:name=".view.order.OrdersActivity" />
    </application>



</manifest>
